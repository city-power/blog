<%- include header %>
<% posts.forEach(function(post,index){ %>
    <p><h2><a href="#"><%= post.title %></a></h2></p>
    <p class="info">
        作者:<a href="#"><%= post.name %></a>
        日期:<%= post.time.minute %>
    </p>
    <p><%- post.post%></p>
   <% if(user&&user.name==post.name){%>
         <p>
             <form action="/remove" method="post">
                
                 <button name="id" value="<%=post.id%>">删除</button>
             </form>
         </p>
  <%}%>

<%})%>
<%- include footer %>